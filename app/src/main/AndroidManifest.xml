<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.twinkly.picatego">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".features.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.categorydetail.CategoryDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".features.categoryselection.CategorySelectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".features.itemdetail.ItemDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".features.welcome.WelcomeActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>